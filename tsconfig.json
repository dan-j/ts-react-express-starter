{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "jsx": "preserve",
        "sourceMap": true,
        "outDir": "build",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["custom-typings", "node_modules/@types"]
    },
    "files": ["index.ts"],
    "include": ["server", "client"],
    "exclude": ["node_modules"]
}
